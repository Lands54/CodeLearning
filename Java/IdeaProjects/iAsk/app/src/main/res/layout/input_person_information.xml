<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <Button
            android:text="&lt;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_page"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"/>

    <TextView
            android:text="Person information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textview10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Username："
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/input_username"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/input_username"
            app:layout_constraintEnd_toStartOf="@+id/input_username" android:layout_marginEnd="5dp"/>
    <EditText
            android:hint="UserName"
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/input_username"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/back_page" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Gender："
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/input_gender"
            app:layout_constraintTop_toTopOf="@+id/input_gender"
            app:layout_constraintEnd_toStartOf="@+id/input_gender" android:layout_marginEnd="5dp"/>

    <Spinner
            android:hint="Gender"
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/input_gender"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/input_username" android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Birthday："
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/input_birthday"
            app:layout_constraintTop_toTopOf="@+id/input_birthday"
            app:layout_constraintEnd_toStartOf="@+id/input_birthday" android:layout_marginEnd="5dp"/>

    <TextView
            android:hint="Birthday"
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/input_birthday"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/input_gender" android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Profession："
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/input_profession"
            app:layout_constraintTop_toTopOf="@+id/input_profession"
            app:layout_constraintEnd_toStartOf="@+id/input_profession" android:layout_marginEnd="5dp"/>

    <Spinner
            android:hint="Profession"
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/input_profession"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/input_birthday" android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"/>

    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_information"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/input_profession"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>