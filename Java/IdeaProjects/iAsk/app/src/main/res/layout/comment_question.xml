<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       xmlns:tools="http://schemas.android.com/tools"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       tools:context=".MainActivity">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/scrollView2">
                <androidx.constraintlayout.widget.ConstraintLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                                android:text="Comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/Commenttitle"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                        <EditText
                                android:id="@+id/input_comment"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Speak something !" tools:layout_editor_absoluteX="0dp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"/>
                        <Button
                                android:text="user1"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/first_comment"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="4dp" android:textSize="10sp"
                                android:textStyle="bold" android:layout_marginTop="6dp"
                                app:layout_constraintTop_toBottomOf="@+id/input_comment"/>
                        <TextView
                                android:text="Comment1"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/Comment1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/first_comment"
                                android:layout_marginTop="3dp" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="4dp"/>
                        <Button
                                android:text="like"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/like1"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginStart="32dp"
                                app:layout_constraintStart_toEndOf="@+id/first_comment" android:layout_marginTop="6dp"
                                app:layout_constraintTop_toBottomOf="@+id/input_comment"/>
                        <Button
                                android:text="user2"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/second_comment"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="4dp" android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/Comment1"/>
                        <Button
                                android:text="like"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/like2"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="33dp"
                                app:layout_constraintTop_toBottomOf="@+id/Comment1" android:layout_marginStart="32dp"
                                app:layout_constraintStart_toEndOf="@+id/second_comment"/>
                        <TextView
                                android:text="Comment2"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/Comment2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/second_comment" android:layout_marginTop="3dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
                        <Button
                                android:text="user3"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/third_comment"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="4dp" android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/Comment2"/>
                        <Button
                                android:text="like"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/like3"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="33dp"
                                app:layout_constraintTop_toBottomOf="@+id/Comment2" android:layout_marginStart="32dp"
                                app:layout_constraintStart_toEndOf="@+id/third_comment"/>
                        <TextView
                                android:text="Comment3"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/Comment3"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/third_comment" android:layout_marginTop="3dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
                        <Button
                                android:text="user4"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/forth_comment"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="4dp" android:textSize="10sp"
                                android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/Comment3"
                                android:layout_marginTop="33dp"/>
                        <Button
                                android:text="like"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/like4"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="33dp"
                                app:layout_constraintTop_toBottomOf="@+id/Comment3" android:layout_marginStart="32dp"
                                app:layout_constraintStart_toEndOf="@+id/forth_comment"/>
                        <TextView
                                android:text="Comment4"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/Comment4"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/forth_comment" android:layout_marginTop="3dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
                        <TextView
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/Comment4" android:layout_marginTop="100dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
                android:text="←"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous_page2"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="37dp"/>
        <Button
                android:text="→"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_page2"
                android:textStyle="normal"
                android:layout_marginEnd="37dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
        <Button
                android:text="&lt;"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_page"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"/>

        <Button
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/add_comment"
                android:text="+"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textSize="25dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


