<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <Button
            android:text="&lt;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_page"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"/>


    <TextView
            android:text="Welcome to register !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Welcome_register"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="104dp" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <EditText
            android:text=""
            android:inputType="number"
            android:id="@+id/accountIN"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="Account"
            android:textStyle="bold"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/Welcome_register"
            android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:text=""
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:textStyle="bold"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/accountIN" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="ACCOUNT"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/accountIN"
            android:id="@+id/textView" android:layout_marginBottom="12dp" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/Welcome_register"
            app:layout_constraintEnd_toStartOf="@+id/accountIN" android:layout_marginEnd="5dp"/>

    <TextView
            android:text="PASSWORD"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/password"
            android:layout_marginEnd="5dp" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_information"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>